<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/image_view"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:contentDescription="@string/content_discription"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/track_position"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/startingSeekPosition"/>

            <SeekBar
                android:id="@+id/track_seek_bar"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/track_total_time"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total_time_temp"/>

        </LinearLayout>
        <TextView
            android:id="@+id/track_title"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/content_discription"/>
        <TextView
            android:id="@+id/track_author"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/content_discription"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:id="@+id/previous_track_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/ic_skip_previous_black_24dp"
                android:contentDescription="@string/content_discription"
                />
            <ImageButton
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:id="@+id/play_track_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/ic_play_arrow_black_24dp"
                android:contentDescription="@string/content_discription"
                />
            <ImageButton
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:id="@+id/pause_track_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/ic_pause_black_24dp"
                android:contentDescription="@string/content_discription"
                />

            <ImageButton
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:id="@+id/stop_track_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/ic_stop_black_24dp"
                android:contentDescription="@string/content_discription"
                />
            <ImageButton
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:id="@+id/skip_track_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/ic_skip_next_black_24dp"
                android:contentDescription="@string/content_discription"
                />

        </LinearLayout>

        <CheckBox
            android:id="@+id/loopingCheckBox"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/looping_track_string"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <CheckBox
            android:id="@+id/shuffleCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/shuffle_play_string"/>


    </LinearLayout>






</LinearLayout>